generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user_account {
  user_id                       String                          @id @default(uuid()) @db.Uuid
  username                      String?                         @db.VarChar(50)
  password_hash                 String?                         @db.VarChar(255)
  full_name                     String?                         @db.VarChar(255)
  email                         String?                         @db.VarChar(255)
  department                    String                          @db.VarChar(50)
  position                      String                          @db.VarChar(50)
  image                         String?                         @db.VarChar(255)
  v_admin                       Int?                            @default(0)
  v_create                      Int?                            @default(0)
  status                        Int?                            @default(0)
  create_date                   DateTime?                       @default(now())
  create_by                     String?                         @db.Uuid
  refresh_token                 String?                         @db.Text
  sect                          String?                         @db.VarChar(10)
  tb_project_members            tb_project_members[]
  tb_project_projects           tb_project_projects[]
  tb_project_sub_task_assignees tb_project_sub_task_assignees[]
  tb_project_task_comments      tb_project_task_comments[]
  tb_project_task_logs          tb_project_task_logs[]
  tb_project_tasks              tb_project_tasks[]
  user_account                  user_account?                   @relation("user_accountTouser_account", fields: [create_by], references: [user_id], onDelete: NoAction, onUpdate: NoAction)
  other_user_account            user_account[]                  @relation("user_accountTouser_account")

  @@index([create_by])
}

model tb_project_members {
  id                  Int                        @id @default(autoincrement())
  project_id          Int?
  user_id             String?                    @db.Uuid
  status              tb_project_members_status? @default(invited)
  invited_by          String                     @db.Uuid
  is_active           Boolean?
  joined_at           DateTime?
  left_at             DateTime?
  tb_project_projects tb_project_projects?       @relation(fields: [project_id], references: [id], onUpdate: SetNull)
  user_account        user_account?              @relation(fields: [user_id], references: [user_id], onUpdate: SetNull)

  @@index([project_id])
  @@index([user_id])
}

model tb_project_projects {
  id                       Int                          @id @default(autoincrement())
  join_code                String?                      @db.VarChar(20)
  name                     String?                      @db.VarChar(255)
  description              String?                      @db.Text
  priority                 tb_project_projects_priority
  status                   tb_project_projects_status
  join_enabled             Boolean
  progress_percent         Decimal?                     @default(0.00) @db.Decimal(5, 2)
  completed_date           DateTime?
  created_by               String?                      @db.Uuid
  created_at               DateTime                     @default(now())
  updated_at               DateTime                     @default(now())
  tb_project_members       tb_project_members[]
  user_account             user_account?                @relation(fields: [created_by], references: [user_id], onUpdate: SetNull)
  tb_project_task_statuses tb_project_task_statuses[]
  tb_project_tasks         tb_project_tasks[]

  @@index([created_by])
}

model tb_project_task_statuses {
  id                   Int                    @id @default(autoincrement())
  project_id           Int
  name                 String                 @db.VarChar(255)
  color                String?                @db.VarChar(10)
  order_index          Int?                   @default(0)
  is_default           Boolean?               @default(false)
  is_done              Boolean?               @default(false)
  created_at           DateTime?              @default(now())
  updated_at           DateTime?              @default(now())
  tb_project_sub_tasks tb_project_sub_tasks[]
  tb_project_projects  tb_project_projects    @relation(fields: [project_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  tb_project_tasks     tb_project_tasks[]

  @@index([project_id])
}

model tb_project_tasks {
  id                       Int                        @id @default(autoincrement())
  project_id               Int
  title                    String?                    @db.VarChar(255)
  description              String?                    @db.Text
  status_id                Int
  assigned_to              String                     @db.Uuid
  priority                 tb_project_tasks_priority
  progress_percent         Decimal?                   @default(0.00) @db.Decimal(5, 2)
  created_at               DateTime                   @default(now())
  updated_at               DateTime                   @default(now())
  tb_project_sub_tasks     tb_project_sub_tasks[]
  tb_project_task_comments tb_project_task_comments[]
  tb_project_task_logs     tb_project_task_logs[]
  user_account             user_account               @relation(fields: [assigned_to], references: [user_id], onDelete: NoAction, onUpdate: NoAction)
  tb_project_projects      tb_project_projects        @relation(fields: [project_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  tb_project_task_statuses tb_project_task_statuses   @relation(fields: [status_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([assigned_to])
  @@index([project_id])
  @@index([status_id])
}

model tb_project_sub_tasks {
  id                            Int                             @id @default(autoincrement())
  task_id                       Int
  title                         String                          @db.VarChar(255)
  description                   String                          @db.Text
  status_id                     Int
  progress_percent              Decimal                         @db.Decimal(5, 2)
  start_date                    DateTime
  has_due_date                  Boolean?
  due_date                      DateTime?
  completed_date                DateTime?
  created_at                    DateTime                        @default(now())
  updated_at                    DateTime                        @default(now())
  tb_project_sub_task_assignees tb_project_sub_task_assignees[]
  tb_project_task_statuses      tb_project_task_statuses        @relation(fields: [status_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  tb_project_tasks              tb_project_tasks                @relation(fields: [task_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  tb_project_task_logs          tb_project_task_logs[]

  @@index([status_id])
  @@index([task_id])
}

model tb_project_sub_task_assignees {
  id                   Int                  @id @default(autoincrement())
  subtask_id           Int
  user_id              String               @db.Uuid
  assigned_at          DateTime             @default(now())
  tb_project_sub_tasks tb_project_sub_tasks @relation(fields: [subtask_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  user_account         user_account         @relation(fields: [user_id], references: [user_id], onDelete: NoAction, onUpdate: NoAction)

  @@index([subtask_id])
  @@index([user_id])
}

model tb_project_task_logs {
  id                   Int                   @id @default(autoincrement())
  task_id              Int
  subtask_id           Int?
  changed_by           String?               @db.Uuid
  old_status_id        Int
  new_status_id        Int
  old_progress         Decimal               @db.Decimal(5, 2)
  new_progress         Decimal               @db.Decimal(5, 2)
  created_at           DateTime              @default(now())
  user_account         user_account?         @relation(fields: [changed_by], references: [user_id], onDelete: NoAction, onUpdate: NoAction)
  tb_project_sub_tasks tb_project_sub_tasks? @relation(fields: [subtask_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  tb_project_tasks     tb_project_tasks      @relation(fields: [task_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([changed_by])
  @@index([subtask_id])
  @@index([task_id])
}

model tb_project_task_comments {
  id               Int              @id @default(autoincrement())
  task_id          Int
  user_id          String           @db.Uuid
  message          String           @db.Text
  created_at       DateTime?        @default(now())
  updated_at       DateTime?        @default(now())
  tb_project_tasks tb_project_tasks @relation(fields: [task_id], references: [id], onDelete: Cascade)
  user_account     user_account     @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

  @@index([task_id])
  @@index([user_id])
}

enum tb_project_members_status {
  invited
  joined
  declined
}

enum tb_project_projects_priority {
  low
  normal
  high
  urgent
}

enum tb_project_projects_status {
  draft
  started
  completed
  cancelled
}

enum tb_project_tasks_priority {
  low
  normal
  high
  urgent
}

model system_setting {
  id          Int      @id @default(autoincrement())
  key         String   @unique
  value       String?
  type        String?
  description String?
  updated_at  DateTime @default(now()) @updatedAt
}
